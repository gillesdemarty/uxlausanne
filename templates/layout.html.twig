{% set navigation_bar = [['speakers', 'Speakers'], ['schedule', 'Schedule'], ['venue', 'Venue'], ['lausanne', 'Lausanne'], ['sponsors', 'Sponsors'],  ['jobs', 'Jobs'],  ['about', 'About']] %}
{% set active_page = active_page|default() %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title '' %}</title>
    <script type="text/javascript" src="//use.typekit.net/jbq6ddu.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <link href="/assets/css/uxlausanne.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
{% block nav %}
<div class="container">
    <ul class="main-nav nav nav-pills text-stronger pull-left">
        <li><a href="{{ path('homepage') }}" class="logo"><strong>UX Lausanne 2014</strong></a></li>
        <li class="verical-divider"><span></span></li>
    </ul>
    
    <nav class="nav-collapse">
        <ul class="main-nav nav nav-pills text-stronger pull-left">
            {% for item in navigation_bar %}
            <li{% if item[0] == active_page %} class="active"{% endif%}>
                <a href="{{ app.url_generator.generate(item[0]) }}">{{item[1]}}</a>
            </li>
            {% endfor %}
        </ul>
    </nav>
    <div class="semi-inner-isolated nav-action pull-right">
            <div class="btn btn-link hidden-xs hidden-sm ">
                May 22-23, 2014
            </div>
            <a href="http://register.uxlausanne.com/" class="btn btn-primary" id="js-buy-ticket-header"><span class="hidden-xs">Buy ticket</span><span class="visible-xs">Tickets</span></a>
        </div>
</div>
{% endblock %}


{% block header %}
{% endblock %}

{% block content %}
{% endblock %}

{% block footer %}

    {# Reasons #}
    {% if app.reasons %}
    <div class="on-grey">
        <div class="container">
            <div class="isolated">
                <div class="row">
                    <div class="col-xs-12">
                        <h2 class="text-center isolated">
                            3 reasons to attend
                        </h2>
                    </div>
                </div>
                <div class="row">
                    {% for reason in app.reasons %}
                     <div class="col-sm-4 col-xs-12">
                        <div class="semi-inner-isolated">
                            <div class="blob blob_{{ loop.index }}"><span>{{ loop.index }}</span></div>
                            <h5>{{ reason.description | raw }}</h5>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="text-center isolated "><a href="http://register.uxlausanne.com/" class="btn btn-lg btn-primary" id="js-buy-ticket-bottom" >Buy your ticket</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {% block organizer %}
        {% if app.organizers %}
        <div class="container isolated">
            <div class="row">
            {% for organizer in app.organizers %}
                <div class="col-xs-4 col-sm-2">
                    <div class="on-grey">
                        <a href="{{ organizer.url }}" class="no-underline"><img src="/{{ organizer.logo }}" alt="{{ organizer.label }}" width="100%"></a>
                    </div>
                </div>
                <div class="col-xs-8 col-sm-4">
                    <h5>{{ organizer.title }}</h5>
                    <p>
                        {{ organizer.description }}
                    </p>
                    <p>
                        <a href="{{ organizer.url }}">{{ organizer.label }}</a>
                    </p>
                </div>
                <div class="clearfix visible-xs isolated">
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    {% endblock %}

    {% block footer_content %}
    {# Footer #}
    <div class="on-dark">
        <div class="container inner-isolated">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <h5>Newsletter</h5>
                    <h6 class="go-pink">Stay up to date</h6>

                    <div id="mc_embed_signup">
                        <form action=
                        "http://uxlausanne.us4.list-manage.com/subscribe/post?u=9251b2d9569dd41bf697b86d3&amp;id=8c7ae62f42"
                        class="validate sm-form" id="mc-embedded-subscribe-form" method="post" name=
                        "mc-embedded-subscribe-form" novalidate="" target="_blank">

                            <div class="form-group">
                                <input class="input-sm form-control required email" placeholder="Email Address *" id=
                                "mce-EMAIL" name="EMAIL" type="email" value="">
                            </div>

                            <div class="form-group">
                                <input class="input-sm form-control required" placeholder="First Name *"id=
                                "mce-FNAME" name="FNAME" type="text" value="">
                            </div>

                            <div class="form-group">
                                <input class="input-sm form-control required" placeholder="Last Name *"id=
                                "mce-LNAME" name="LNAME" type="text" value="">
                            </div>

                            <div class="form-group">
                                <input class="input-sm form-control " id=
                                "mce-TEXTYUI_3" name="TEXTYUI_3" type="text" placeholder="Company" value="">
                            </div>

                            <div class="clear" id="mce-responses">
                                <div class="response" id="mce-error-response" style=
                                "display:none"></div>

                                <div class="response" id="mce-success-response" style=
                                "display:none"></div>
                            </div>

                            <div class="clear">
                                <input class="form-control btn btn-primary button" id="mc-embedded-subscribe" name=
                                "subscribe" type="submit" value="Get the Newsletter">
                            </div>
                        </form>

                        <div class="isolated"></div>
                        <div class="visible-xs">
                            <hr/>
                        </div>
                    </div><!--End mc_embed_signup-->

                </div>
                <div class="col-md-3 col-sm-6">
                    <h5>Networks</h5>
                    <h6 class="go-pink">Follow us</h6>
                    <p>
                        <a href="https://www.facebook.com/uxlausanne" id="js-link-facebook">Facebook</a><br/>
                        <a href="https://twitter.com/uxlausanne" id="js-link-twitter">Twitter</a><br/>
                        <a href="http://instagram.com/uxlausanne" id="js-link-instagram">Instagram</a><br/>
                        <a href="http://lanyrd.com/2014/uxlausanne/" id="js-link-lanyrd">Lanyrd</a>
                    </p>
                    <div class="visible-xs">
                        <div class="isolated"></div>
                        <hr/>
                    </div>
                </div>
                <div class="clearfix visible-sm">
                    <div class="isolated"></div>
                    <hr/>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h5>Email</h5>
                    <h6 class="go-pink">Contact us</h6>
                    <p>
                        <a href="mailto:info@uxromandie.ch">info@uxromandie.ch</a>
                    </p>
                    <div class="visible-xs">
                        <div class="isolated"></div>
                        <hr/>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h5>Sponsoring & press kits</h5>
                    <h6 class="go-pink">Become our official sponsor</h6>
                    <p>
                        <a href="/assets/pdf/uxlausanne_sponsorkit_general.pdf" id="js-dl-sponsor-bottom">Download our sponsor kit</a><br/>
                        <a href="mailto:sponsoring@uxromandie.ch">sponsoring@uxromandie.ch</a>
                    </p>
                    <p>
                        <a href="https://www.dropbox.com/sh/k6abdavcz1jkgi5/SYylOrL9hW" id="js-dl-press-bottom" target="_blank">Download our press kit</a>

                    </p>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
{% endblock %}
    
