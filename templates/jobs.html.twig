{% extends "layout.html.twig" %}
{% set active_page = "jobs" %}

{% block title 'Jobs – UX Lausanne 2014' %}

{% block header %}
<section class="on-pink circled text-center inner-isolated">
  <h1>Jobs</h1>
  <h4>Discover our awesome jobs</h4>
</section>
{% endblock %}

{% block content %}

{# Speaker #}
<div class="container isolated">
    <div class="row">
    {% for job in jobs %}
        <a href="{{ job.link }}">

            {{ job.title }}
            published on {{ job.pubDate|date('d M Y') }}

            {% for tag in job.categories %}
                <span class="label label-default">{{ tag }}</span>
            {% endfor %}
        </a>
        <hr>
    {% endfor %}
    </div>
</div>

{% endblock %}
