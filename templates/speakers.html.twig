{% extends "layout.html.twig" %}

{% block title 'Speakers – UX Lausanne 2014' %}

{% block header %}
<section class="on-pink circled text-center inner-isolated">
  <h1>Speakers</h1>
  <h4>Discover our awesome speakers</h4>
</section>
{% endblock %}

{% block content %}

{# Speaker #}
{% if app.speakers %}
<div class="container isolated">
    <div class="row">
    {% for speaker in app.speakers %}
        <div class="col-sm-6 col-xs-12 card">
            {% if speaker.photo %}
                <img src="{{ speaker.photo }}" alt="{{ speaker.title }}" class="img-thumbnail" width="100%">
            {% endif %}
            <h4>{{ speaker.title }}</h4>
            <p>{{ speaker.company }}</p>
            <hr class="short">
            <p>
                {{ speaker.body }}
            </p>
            <p>
                <a href="{{ speaker.company_url }}">{{ speaker.company }}</a><br/>
                {% for url in speaker.speaker_urls %}
                    <a href="{{ url.url }}">{{ url.label }}</a>
                    {% if not loop.last %}<br>{% endif %}
                {% endfor %}
            </p>
        </div>
        {% if loop.index is divisibleby(2) %}
        </div>
        <div class="row isolated">
        {% else %}
            <div class="clearfix visible-xs">
                <div class="isolated"></div>
                <hr/>
            </div>
        {% endif %}
    {% endfor %}
    </div>
</div>
{% endif %}

{% endblock %}